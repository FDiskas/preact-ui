{
  "name": "altv-ui",
  "version": "0.0.1",
  "license": "MIT",
  "description": "UI for the altv game",
  "scripts": {
    "start": "parcel src/index.html",
    "build": "parcel build src/index.html --target node --bundle-node-modules --no-source-maps --experimental-scope-hoisting",
    "preserve": "yarn build",
    "serve": "serve dist -s -n",
    "lint": "eslint . --cache --fix --ext .ts,.tsx",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,css,md}\"",
    "lint:css": "stylelint '**/*.css'",
    "pretest": "npm run lint:css"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "preact": "*",
    "preact-router": "^3.2.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "parcel": "^1.12.4",
    "parcel-plugin-clean-dist": "^0.0.6",
    "postcss": "^7.0.35",
    "postcss-modules": "^3.2.2",
    "preact-cli": "^3.0.5",
    "prettier": "^2.2.1",
    "sass": "^1.30.0",
    "serve": "^11.3.2",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^4.1.2"
  }
}
