{
  "name": "parcel-preact-typescript",
  "version": "1.0.2",
  "license": "MIT",
  "description": "Simple set-up using Parcel, Preact X and TypeScript",
  "author": "Eric Liu (https://github.com/metonym)",
  "scripts": {
    "start": "parcel src/index.html",
    "build": "rimraf dist && parcel build src/index.html --target node --bundle-node-modules --no-source-maps --experimental-scope-hoisting",
    "preserve": "yarn build",
    "serve": "serve dist -s -n",
    "test": "jest"
  },
  "dependencies": {
    "preact": "^10.5.7",
    "preact-router": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@types/jest": "^25.1.4",
    "jest": "^25.1.0",
    "parcel-bundler": "^1.12.4",
    "postcss": "^7.0.35",
    "postcss-modules": "^3.2.2",
    "preact-cli": "^3.0.4",
    "preact-render-to-string": "*",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "ts-jest": "^25.2.1",
    "typescript": "^4.1.2"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
